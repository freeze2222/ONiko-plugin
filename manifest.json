{
  "manifest_version": 2,
  "name": "oNiko",
  "version": "2.0",
  "description": "Just Niko follows your mouse (Sprites from OneShot)",
  "icons": {
    "96": "icons/niko.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icons/niko.png",
    "default_popup": "options.html"
  }
}
