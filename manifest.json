{
  "manifest_version": 3,
  "name": "oNiko",
  "version": "1.7",
  "description": "Just Niko follows your mouse (Sprites from OneShot)",
  "icons": {
    "96": "icons/niko.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "background": {
	"service_worker": "scripts/background.js"
   },

  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "web_accessible_resources": [
    {
      "resources": [ "img/oniko.png" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}